Name:                devicemanager
Version:             0.1.0
Synopsis:            Interfaces to the UDisks daemon
License:             BSD3
License-File:        LICENSE
Author:              Hans-Peter Deifel <hpdeifel@gmx.de>
Maintainer:          Hans-Peter Deifel <hpdeifel@gmx.de>
Category:            System
Build-Type:          Simple
Cabal-Version:       >=1.8

Executable devman
  Main-Is:             Main.hs
  Build-Depends:       base >=4.6 && <4.9,
                       dbus ==0.10.*,
                       containers ==0.5.*,
                       process >=1.1 && <1.3,
                       vty-ui >=1.8 && <1.10,
                       vty >=5.2 && <5.3,
                       text >=0.11 && <1.3,
                       vector ==0.10.*
  Ghc-Options:         -threaded
  Hs-Source-Dirs:      src

Executable devnotify
  Main-Is:             Notifications.hs
  Build-Depends:       base >=4.6 && <4.9,
                       dbus ==0.10.*,
                       containers ==0.5.*,
                       process >=1.1 && <1.3,
                       text >=0.11 && <1.3
  Hs-Source-Dirs:      src
